-- Cabe√ßalho e carregamento RedzLib
local redzlib = loadstring(game:HttpGet("https://raw.githubusercontent.com/SrDark222/SH_0001/refs/heads/main/inject%20R.Hub.lua"))()
local Window = redzlib:MakeWindow({
    Title = "T.C.C H4x - MDIM",
    SubTitle = "by DKZIN",
    SaveFolder = "tcc_mdim.lua"
})

Window:AddMinimizeButton({
    Button = { Image = "rbxassetid://10704761835", BackgroundTransparency = 0 },
    Corner = { CornerRadius = UDim.new(0.4, 1) },
})

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local MarketplaceService = game:GetService("MarketplaceService")

-- Vars
local killTarget, killLoop, killAll = "", false, false
local customTagName, tagColor = "", Color3.fromRGB(255, 0, 0)
local espSound, espName, espHealth = false, true, true
local colors = {
    Vermelho = Color3.fromRGB(255,0,0),
    Verde = Color3.fromRGB(0,255,0),
    Azul = Color3.fromRGB(0,0,255),
    Amarelo = Color3.fromRGB(255,255,0),
    Roxo = Color3.fromRGB(128,0,128),
    Laranja = Color3.fromRGB(255,165,0),
    Branco = Color3.fromRGB(255,255,255),
    Preto = Color3.fromRGB(0,0,0)
}

-- Atualiza lista de players no dropdown
local function updatePlayerList(dropdown)
    local list = {}
    for _, p in pairs(Players:GetPlayers()) do
        if p ~= LocalPlayer then table.insert(list, p.Name) end
    end
    for _, m in pairs({"Clear","Add","SetOptions","Update","Set","Refresh"}) do
        pcall(function() if dropdown[m] then dropdown[m](dropdown, list) end end)
    end
end

-- Fun√ß√£o kill loop
task.spawn(function()
    while true do
        task.wait(0.1)
        if killLoop and killTarget ~= "" then
            pcall(function()
                LocalPlayer.Backpack:WaitForChild("Soco"):WaitForChild("DMG"):FireServer("Damage", killTarget)
            end)
        elseif killAll then
            for _, p in pairs(Players:GetPlayers()) do
                if p ~= LocalPlayer then
                    pcall(function()
                        LocalPlayer.Backpack:WaitForChild("Soco"):WaitForChild("DMG"):FireServer("Damage", p.Name)
                    end)
                end
            end
        end
    end
end)

-- Aba Kill
local killTab = Window:MakeTab({"kill","T.C.C Kill"})
killTab:AddSection({"Ataque"})

local killDropdown = killTab:AddDropdown({
    Name = "Selecionar Alvo",
    Options = {},
    Callback = function(v) killTarget = v; killLoop = false; killAll = false end
})

killTab:AddButton({
    Name = "Atualizar Lista",
    Callback = function() updatePlayerList(killDropdown) end
})

killTab:AddToggle({
    Name = "Loop Kill Alvo",
    Default = false,
    Callback = function(state)
        killLoop = state
        if state then killAll = false end
    end
})

killTab:AddToggle({
    Name = "Loop Kill Todos",
    Default = false,
    Callback = function(state)
        killAll = state
        if state then killLoop = false end
    end
})

-- Tags & Part√≠culas
killTab:AddSection({"Tags Personalizadas"})

killTab:AddTextBox({
    Name = "Texto da Tag",
    PlaceholderText = "Sua tag aqui",
    Callback = function(v) customTagName = v end
})

killTab:AddDropdown({
    Name = "Cor da Tag",
    Options = (function()
        local t = {}
        for k in pairs(colors) do table.insert(t, k) end
        return t
    end)(),
    Callback = function(v) tagColor = colors[v] or Color3.fromRGB(255,0,0) end
})

killTab:AddButton({
    Name = "Aplicar Tag",
    Callback = function()
        if customTagName ~= "" then
            pcall(function()
                ReplicatedStorage:WaitForChild("RemoteEvent"):WaitForChild("Shop"):WaitForChild("Tag"):FireServer(tagColor, 1000, customTagName)
            end)
        end
    end
})

killTab:AddSection({"Part√≠culas T.C.C"})
killTab:AddButton({
    Name = "Ativar Part√≠culas T.C.C",
    Callback = function()
        local effectId = "rbxassetid://100971981026789"
        pcall(function()
            ReplicatedStorage:WaitForChild("RemoteEvent"):WaitForChild("Shop"):WaitForChild("Effect"):FireServer(effectId, 0)
            ReplicatedStorage:WaitForChild("RemoteEvent"):WaitForChild("Shop"):WaitForChild("Effect"):FireServer(effectId, 0)
        end)
    end
})

-- Aba ESP
local espTab = Window:MakeTab({"esp","T.C.C ESP"})
espTab:AddSection({"ESP de Som"})

espTab:AddToggle({
    Name = "ESP de Som",
    Default = false,
    Callback = function(state)
        espSound = state
        if not state then
            for _, v in pairs(workspace:GetDescendants()) do
                if v:IsA("BillboardGui") and v.Name == "RadioInfo" then pcall(function() v:Destroy() end) end
            end
        end
    end
})

task.spawn(function()
    while true do
        task.wait(0.5)
        if not espSound then continue end
        local sons = {}
        for _, s in pairs(workspace:GetDescendants()) do
            if s:IsA("Sound") and s.IsPlaying then
                local id = tostring(s.SoundId):match("%d+")
                local orig = s.Parent:IsA("BasePart") and s.Parent or s:FindFirstAncestorWhichIsA("Model") and s:FindFirstAncestorWhichIsA("Model"):FindFirstChild("Head")
                if id and orig and not sons[orig] then
                    local name = "Desconhecido"
                    pcall(function()
                        name = MarketplaceService:GetProductInfo(tonumber(id)).Name
                    end)
                    local old = orig:FindFirstChild("RadioInfo")
                    if old then old:Destroy() end
                    local gui = Instance.new("BillboardGui", orig)
                    gui.Name = "RadioInfo"
                    gui.Size = UDim2.new(0, 200, 0, 40)
                    gui.StudsOffset = Vector3.new(0, 3, 0)
                    gui.Adornee = orig
                    gui.AlwaysOnTop = true
                    local txt = Instance.new("TextLabel", gui)
                    txt.Size = UDim2.new(1,0,1,0)
                    txt.BackgroundTransparency = 1
                    txt.TextColor3 = Color3.new(1,1,1)
                    txt.TextStrokeTransparency = 0
                    txt.TextScaled = true
                    txt.Font = Enum.Font.SourceSansBold
                    txt.Text = "üéµ "..name.."\nüÜî "..id
                    sons[orig] = true
                end
            end
        end
        for _, gui in pairs(workspace:GetDescendants()) do
            if gui:IsA("BillboardGui") and gui.Name == "RadioInfo" and gui.Adornee and not sons[gui.Adornee] then
                gui:Destroy()
            end
        end
    end
end)

espTab:AddSection({"ESP de Nicks e Vida"})

local espShowName = true
local espShowHealth = true

local function updateESP()
    for _, p in pairs(Players:GetPlayers()) do
        if p ~= LocalPlayer and p.Character and p.Character:FindFirstChild("Head") and p.Character:FindFirstChild("Humanoid") then
            local head = p.Character.Head
            local espGui = head:FindFirstChild("PlayerESP")
            if espShowName or espShowHealth then
                if not espGui then
                    espGui = Instance.new("BillboardGui", head)
                    espGui.Name = "PlayerESP"
                    espGui.Size = UDim2.new(0,150,0,40)
                    espGui.Adornee = head
                    espGui.AlwaysOnTop = true
                    espGui.StudsOffset = Vector3.new(0,2,0)
                    local txt = Instance.new("TextLabel", espGui)
                    txt.Name = "Label"
                    txt.BackgroundTransparency = 1
                    txt.Size = UDim2.new(1,0,1,0)
                    txt.TextColor3 = Color3.new(1,1,1)
                    txt.TextStrokeTransparency = 0
                    txt.TextScaled = true
                    txt.Font = Enum.Font.SourceSansBold
                end
                local label = espGui:FindFirstChild("Label")
                if label then
                    local text = ""
                    if espShowName then text = p.Name end
                    if espShowHealth then
                        local hp = math.floor(p.Character.Humanoid.Health)
                        text = (text ~= "" and text.."\n" or "").."HP: "..hp
                    end
                    label.Text = text
                end
            elseif espGui then
                espGui:Destroy()
            end
        elseif p.Character and p.Character:FindFirstChild("Head") then
            local espGui = p.Character.Head:FindFirstChild("PlayerESP")
            if espGui then espGui:Destroy() end
        end
    end
end

espTab:AddToggle({
    Name = "Mostrar Nicks",
    Default = true,
    Callback = function(state)
        espShowName = state
    end
})

espTab:AddToggle({
    Name = "Mostrar Vida",
    Default = true,
    Callback = function(state)
        espShowHealth = state
    end
})

task.spawn(function()
    while true do
        task.wait(0.3)
        if espShowName or espShowHealth then
            updateESP()
        else
            for _, v in pairs(workspace:GetDescendants()) do
                if v:IsA("BillboardGui") and v.Name == "PlayerESP" then
                    pcall(function() v:Destroy() end)
                end
            end
        end
    end
end)

