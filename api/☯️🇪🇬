local killDropdown = killTab:AddDropdown({
    Name = "Selecionar Alvo",
    Options = {},
    Callback = function(value)
        killTarget = value
        killLoop = false
        killAll = false
    end
})

killTab:AddButton({
    Name = "Atualizar Lista",
    Callback = function()
        updatePlayerList(killDropdown)
    end
})

killTab:AddToggle({
    Name = "Loop Kill Alvo",
    Default = false,
    Callback = function(state)
        killLoop = state
        if state then killAll = false end
    end
})

killTab:AddToggle({
    Name = "Loop Kill Todos",
    Default = false,
    Callback = function(state)
        killAll = state
        if state then killLoop = false end
    end
})










-- DEPENDÊNCIAS / VARIÁVEIS
local character, humanoidRootPart
local lastPosition = nil
local rollbackEnabled = false
local antiVoidEnabled = false
local antiSitEnabled = false
local noCanSitEnabled = false
-- FUNÇÕES DE ATUALIZAÇÃO DE PERSONAGEM
local function getCharacter()
	character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
	humanoidRootPart = character:WaitForChild("HumanoidRootPart")
end

getCharacter()
LocalPlayer.CharacterAdded:Connect(getCharacter)




local AntiTab = Window:MakeTab({Name = "Anti", Icon = "rain"})
AntiTab:AddSection({Name = "Proteções Contra Comandos Admin"})

AntiTab:AddToggle({
	Name = "Anti-tp (funciona)",
	Default = false,
	Callback = function(state)
		getgenv().AntiTP = state
		if state then
			local lastPos = nil
			local hrp = game.Players.LocalPlayer.Character:WaitForChild("HumanoidRootPart")
			while AntiTP and task.wait(0.00000002) do
				local pos = hrp.Position
				if lastPos and (pos - lastPos).Magnitude >= 20 then
					local TweenService = game:GetService("TweenService")
					local tween = TweenService:Create(hrp, TweenInfo.new(0.09, Enum.EasingStyle.Quad), {CFrame = CFrame.new(lastPos)})
					tween:Play()
				end
				lastPos = pos
			end
		end
	end
})

AntiTab:AddToggle({
	Name = "Anti-Void (beta)",
	Default = false,
	Callback = function(state)
		getgenv().AntiVoid = state
		if state then
			local RunService = game:GetService("RunService")
			local lplr = game.Players.LocalPlayer
			local function GetUltimo()
				local all = game.Players:GetPlayers()
				return all[#all]
			end
			local conn = RunService.Heartbeat:Connect(function()
				if lplr.Character and lplr.Character:FindFirstChild("HumanoidRootPart") then
					local posY = lplr.Character.HumanoidRootPart.Position.Y
					if posY < -5 then
						local target = GetUltimo()
						if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
							local targetPos = target.Character.HumanoidRootPart.Position + Vector3.new(0, 5, 0)
							local TweenService = game:GetService("TweenService")
							local tween = TweenService:Create(lplr.Character.HumanoidRootPart, TweenInfo.new(0.7), {CFrame = CFrame.new(targetPos)})
							tween:Play()
						end
					end
				end
			end)
			repeat task.wait() until not getgenv().AntiVoid
			conn:Disconnect()
		end
	end
})

AntiTab:AddToggle({
	Name = "Anti-Sit (beta)",
	Default = false,
	Callback = function(state)
		getgenv().AntiSit = state
		local hum = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
		if hum then hum.Sit = false end
		if state then
			local conn
			conn = hum:GetPropertyChangedSignal("Sit"):Connect(function()
				if hum.Sit then hum.Sit = false end
			end)
			repeat task.wait() until not getgenv().AntiSit
			if conn then conn:Disconnect() end
		end
	end
})


